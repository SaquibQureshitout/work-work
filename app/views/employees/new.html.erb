  <%= message %>
 <% end %>

 <%= f.label :company %>
  <%= f.text_field :company %>
 <% @employee.errors.full_messages_for(:designation).each do |message| %>
  <%= message %>
 <% end %>

 <%= f.label :designation %>
 <%= f.text_field :designation %>
